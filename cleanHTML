        public string cleanHTML(string xhtmlString)
        {
            xhtmlString = xhtmlString.Replace("\r", string.Empty).Replace("\n", string.Empty).Replace("\t", string.Empty);

            xhtmlString = xhtmlString.Replace("<BR>", "<br />").Replace("<br>", "<br />");

            xhtmlString = xhtmlString.Replace("style=\"text-decoration:underline\"", string.Empty);

            xhtmlString = xhtmlString.Replace("width=\"1000\"", string.Empty);

            xhtmlString = xhtmlString.Replace("width=\"150px\"", string.Empty);

            while (true)
            {
                int position = xhtmlString.IndexOf("style");

                if (position > -1)
                {
                    int position2 = xhtmlString.IndexOf("\"", position + 9) + 1;

                    int theLength = position2 - position;

                    xhtmlString = xhtmlString.Remove(position, theLength);
                }

                else
                    break;
            }

            int pos1 = xhtmlString.IndexOf("<button");
            int pos2 = xhtmlString.IndexOf("</button>") + 9;
            int len = pos2 - pos1;

            xhtmlString = xhtmlString.Remove(pos1, len);

            pos1 = xhtmlString.IndexOf("<button");
            pos2 = xhtmlString.IndexOf("</button>") + 9;
            len = pos2 - pos1;

            xhtmlString = xhtmlString.Remove(pos1, len);

            pos1 = xhtmlString.IndexOf("<button");
            pos2 = xhtmlString.IndexOf("</button>") + 9;
            len = pos2 - pos1;

            xhtmlString = xhtmlString.Remove(pos1, len);

            pos1 = xhtmlString.IndexOf("<input");
            pos2 = xhtmlString.IndexOf("/>", pos1) + 2;
            len = pos2 - pos1;

            xhtmlString = xhtmlString.Remove(pos1, len);

            pos1 = xhtmlString.IndexOf("<input");
            pos2 = xhtmlString.IndexOf("/>", pos1) + 2;
            len = pos2 - pos1;

            xhtmlString = xhtmlString.Remove(pos1, len);

            pos1 = xhtmlString.IndexOf("<input");
            pos2 = xhtmlString.IndexOf("/>", pos1) + 2;
            len = pos2 - pos1;

            xhtmlString = xhtmlString.Remove(pos1, len);

            return xhtmlString;
        }
